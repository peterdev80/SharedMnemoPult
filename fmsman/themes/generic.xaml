<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:fmsman"
    xmlns:vv="clr-namespace:fmsman.Formats">
    
    <Style x:Key="{x:Type vv:BoolVarVisual}" TargetType="{x:Type vv:BoolVarVisual}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type vv:BoolVarVisual}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="valueflash" Timeline.DesiredFrameRate="20">
                            <ColorAnimation From="Lime"
                                 To="Black"
                                 Duration="0:0:0.5"
                                 Storyboard.TargetName="PART_txt"
                                 Storyboard.TargetProperty="Foreground.Color"/>
                        </Storyboard>

                        <Storyboard x:Key="liftup" Timeline.DesiredFrameRate="20">
                            <DoubleAnimation From="0.1"
                                             To="1"
                                             Duration="0:0:0.2"
                                             Storyboard.TargetName="lights"
                                             Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                        <Storyboard x:Key="liftdown" Timeline.DesiredFrameRate="20">
                            <DoubleAnimation From="1"
                                             To="0.1"
                                             Duration="0:0:0.2"
                                             Storyboard.TargetName="lights"
                                             Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard Storyboard="{StaticResource liftup}" />
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard Storyboard="{StaticResource liftdown}" />
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                    <Grid>
                        <WrapPanel Margin="-2" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Image x:Name="PART_vtrue" Height="16" Width="16" Source="/fmsman;component/images/on.ico"/>
                            <Image x:Name="PART_vfalse" Height="16" Width="16" Source="/fmsman;component/images/off.ico"/>
                        </WrapPanel>
                        <TextBlock x:Name="PART_txt" Margin="14,0,0,0" Foreground="Black" />
                        <WrapPanel x:Name="lights" TextBlock.Foreground="LightGray" HorizontalAlignment="Right" Opacity="0.1" Margin="-2">
                            <Image x:Name="PART_true" Height="16" Width="16" 
                                   Cursor="Hand" Source="/fmsman;component/images/on.ico"/>
                            <Image x:Name="PART_false" Height="16" Width="16" 
                                   Cursor="Hand"
                                   Margin="2,0,0,0" Source="/fmsman;component/images/off.ico"/>
                        </WrapPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{x:Type vv:NumericVarVisual}" TargetType="{x:Type vv:NumericVarVisual}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type vv:NumericVarVisual}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="valueflash" Timeline.DesiredFrameRate="20">
                            <ColorAnimation From="Lime"
                                 To="Black"
                                 Duration="0:0:0.5"
                                 Storyboard.TargetName="PART_txt"
                                 Storyboard.TargetProperty="Foreground.Color"/>
                        </Storyboard>

                        <Storyboard x:Key="liftup" Timeline.DesiredFrameRate="20">
                            <DoubleAnimation From="0.1"
                                             To="1"
                                             Duration="0:0:0.2"
                                             Storyboard.TargetName="PART_pan"
                                             Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                        <Storyboard x:Key="liftdown" Timeline.DesiredFrameRate="20">
                            <DoubleAnimation From="1"
                                             To="0.1"
                                             Duration="0:0:0.2"
                                             Storyboard.TargetName="PART_pan"
                                             Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard Storyboard="{StaticResource liftup}" />
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard Storyboard="{StaticResource liftdown}" />
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                    <Grid>
                        <TextBlock x:Name="PART_txt" Foreground="Black" />
                        <TextBox x:Name="PART_editor" Height="15" Margin="-1,-2,-1,-2" Padding="0" 
                                 Visibility="Collapsed" BorderThickness="0" />
                        <WrapPanel HorizontalAlignment="Right" x:Name="PART_pan" Opacity="0.1" >
                            <Image x:Name="PART_pencil" Height="16" Width="16" 
                                   Cursor="Hand" Margin="-2"
                                   Source="/fmsman;component/images/pencil.ico"/>
                            <Image x:Name="PART_up" Height="16" Width="16" 
                                   Cursor="Hand" Margin="-2"
                                   Source="/fmsman;component/images/up.png"/>
                            <Image x:Name="PART_down" Height="16" Width="16" 
                                   Cursor="Hand" Margin="-2"
                                   Source="/fmsman;component/images/down.png"/>
                        </WrapPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="{x:Type vv:CharVarVisual}" TargetType="{x:Type vv:CharVarVisual}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type vv:CharVarVisual}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="valueflash" Timeline.DesiredFrameRate="20">
                            <ColorAnimation From="Lime"
                                 To="Black"
                                 Duration="0:0:0.5"
                                 Storyboard.TargetName="PART_txt"
                                 Storyboard.TargetProperty="Foreground.Color"/>
                        </Storyboard>

                        <Storyboard x:Key="liftup" Timeline.DesiredFrameRate="20">
                            <DoubleAnimation From="0.1"
                                             To="1"
                                             Duration="0:0:0.2"
                                             Storyboard.TargetName="ctrls"
                                             Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                        <Storyboard x:Key="liftdown" Timeline.DesiredFrameRate="20">
                            <DoubleAnimation From="1"
                                             To="0.1"
                                             Duration="0:0:0.2"
                                             Storyboard.TargetName="ctrls"
                                             Storyboard.TargetProperty="Opacity" />
                        </Storyboard>


                    </ControlTemplate.Resources>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard Storyboard="{StaticResource liftup}" />
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard Storyboard="{StaticResource liftdown}" />
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                    <Grid>
                        <TextBlock x:Name="PART_txt" Foreground="Black" />
                        <TextBox x:Name="PART_editor" Height="15" Margin="-1,-2,-1,-2" Padding="0" Visibility="Collapsed" BorderThickness="0" />
                        <WrapPanel HorizontalAlignment="Right" >
                        <TextBlock x:Name="PART_preview" Foreground="Gray" Visibility="Collapsed" />
                            <WrapPanel x:Name="ctrls" Opacity="0.1">
                                <TextBlock x:Name="PART_submenu" Text="U" FontWeight="Bold" Cursor="Hand" Margin="2,0,0,0" >
                                    <TextBlock.Resources>
                                        <ContextMenu x:Key="cpmenu" >
                                            <MenuItem Header="Unicode" />
                                            <MenuItem Header="Windows" />
                                        </ContextMenu>
                                    </TextBlock.Resources>
                                </TextBlock>
                                <Image x:Name="PART_pencil" Height="16" Width="16" 
                                       Cursor="Hand" Margin="2,-2,-2,-2"
                                       Source="/fmsman;component/images/pencil.ico"/>
                            </WrapPanel>
                        </WrapPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{x:Type vv:CMDVarVisual}" TargetType="{x:Type vv:CMDVarVisual}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type vv:CMDVarVisual}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="valueflash">
                            <ColorAnimation From="Lime"
                                 To="White"
                                 Duration="0:0:0.5"
                                 Storyboard.TargetName="PART_grd"
                                 Storyboard.TargetProperty="Background.Color"/>
                        </Storyboard>

                        <Storyboard x:Key="liftup" Timeline.DesiredFrameRate="20">
                            <DoubleAnimation From="0.1"
                                             To="1"
                                             Duration="0:0:0.2"
                                             Storyboard.TargetName="icons"
                                             Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                        <Storyboard x:Key="liftdown" Timeline.DesiredFrameRate="20">
                            <DoubleAnimation From="1"
                                             To="0.1"
                                             Duration="0:0:0.2"
                                             Storyboard.TargetName="icons"
                                             Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard Storyboard="{StaticResource liftup}" />
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard Storyboard="{StaticResource liftdown}" />
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                    <Grid x:Name="PART_grd" Background="White">
                        <TextBlock Foreground="Black" Text="&lt;CMDVAR&gt;" />
                        <WrapPanel x:Name="icons" TextBlock.Foreground="LightGray" HorizontalAlignment="Right" Opacity="0.1">
                            <Image x:Name="PART_exec" Height="16" Width="16" 
                                   Cursor="Hand"
                                   Margin="-2,-1,0,-2" Source="/fmsman;component/images/exec.ico"/>
                        </WrapPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{x:Type vv:WDVarVisual}" TargetType="{x:Type vv:WDVarVisual}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type vv:WDVarVisual}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="valueflash" Timeline.DesiredFrameRate="20">
                            <ColorAnimation From="Lime"
                                 To="Black"
                                 Duration="0:0:0.5"
                                 Storyboard.TargetName="PART_txt"
                                 Storyboard.TargetProperty="Foreground.Color"/>
                        </Storyboard>

                        <Storyboard x:Key="liftup" Timeline.DesiredFrameRate="20">
                            <DoubleAnimation From="0.1"
                                             To="1"
                                             Duration="0:0:0.2"
                                             Storyboard.TargetName="icons"
                                             Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                        <Storyboard x:Key="liftdown" Timeline.DesiredFrameRate="20">
                            <DoubleAnimation From="1"
                                             To="0.1"
                                             Duration="0:0:0.2"
                                             Storyboard.TargetName="icons"
                                             Storyboard.TargetProperty="Opacity" />
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard Storyboard="{StaticResource liftup}" />
                            </EventTrigger.Actions>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <EventTrigger.Actions>
                                <BeginStoryboard Storyboard="{StaticResource liftdown}" />
                            </EventTrigger.Actions>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                    <Grid x:Name="PART_grd" Background="White">
                        <WrapPanel Margin="-2" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <Image x:Name="PART_vtrue" Height="16" Width="16" Source="/fmsman;component/images/on.ico"/>
                            <Image x:Name="PART_vfalse" Height="16" Width="16" Source="/fmsman;component/images/off.ico"/>
                            <TextBlock x:Name="PART_txt" Foreground="Black" />
                        </WrapPanel>
                        <WrapPanel x:Name="icons" TextBlock.Foreground="LightGray" HorizontalAlignment="Right" Opacity="0.1">
                            <Image x:Name="PART_rst" Height="16" Width="16" 
                                   Cursor="Hand"
                                   Margin="-2,-1,0,-2" Source="/fmsman;component/images/exec.ico"/>
